<div id="<%= dom_id admin_company %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= admin_company.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= admin_company.address %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this company", admin_company, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this company', edit_admin_company_path(admin_company), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
