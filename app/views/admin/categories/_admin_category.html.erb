<div id="<%= dom_id admin_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= admin_category.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this category", admin_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this category', edit_admin_category_path(admin_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
